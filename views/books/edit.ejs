<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= book.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[name]" value="<%= book.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="book[subject]" value="<%= book.subject %>" required>
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="book[price]" value="<%= book.price %>" >
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="book[contact]" value="<%= book.contact %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="book[year]" value="<%= book.year %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="book[bought]" value="<%= book.bought %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[description]" value="<%= book.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
			<div style="text-align:center">
            	<a href="/books">Go Back</a>
			</div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>

